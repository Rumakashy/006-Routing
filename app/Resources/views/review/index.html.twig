{% extends 'base.html.twig' %}

{% block body %}

    <h1>Reviews</h1>

    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>user_rated_id</th>
            <th>review_rated_id</th>
            <th>text</th>
            <th>publicationDate</th>
            <th>note</th>
        </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <td>{{ review.id }}</a></td>
            <td>{{ review.userRated }}</td>
            <td></td>
            <td>{{ review.text }}</td>
            <td>{{ review.publicationDate|date("d/m/y") }}</td>
            <td>{{ review.note }}</td>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="/">Return to homepage</a>
        </li>
    </ul>
{% endblock %}